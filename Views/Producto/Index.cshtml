@model List<pc3_marangon_fabio.Models.Producto>

@{
    ViewData["Title"] = "Lista de productos";
}

<h1>@ViewData["Title"]</h1>
  <div class="container">

    <a class="btn btn-primary" asp-controller="Producto" asp-action="Crear">Crear</a>

    @if (Model.Count == 0) {
        <div class = "alert-primary">Anímese a registrar un producto!!!</div>
    }

    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="300"
                       src="@item.ImgUrl" alt="@item.ImgUrl"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                  <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Precio)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Desc)</p>
                  <p class="card-text"><strong>Comprador:</strong> @Html.DisplayFor(modelItem => item.NombreComprador)</p>
                  <p class="card-text"><strong>Celular:</strong> @Html.DisplayFor(modelItem => item.Celular)</p>
                  <p class="card-text"><strong>Lugar de compra:</strong> @Html.DisplayFor(modelItem => item.LugarCompra)</p>
                  <p class="card-text"><strong>Categoría:</strong> @Html.DisplayFor(modelItem => item.Categoria.Nombre)</p>
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div>